kind: ReplicationController
apiVersion: v1
metadata:
  name: spark-worker-controller
spec:
  replicas: 3
  selector:
    component: spark-worker
  template:
    metadata:
      labels:
        component: spark-worker
    spec:
      containers:
        - name: spark-worker
          image: ${REPO}/openshift-spark-worker
          ports:
            - containerPort: 8081
          resources:
            requests:
              cpu: 1.5
              memory: 6Gi
